{
  "name": "@bikeleasing-service/pedal-tokens",
  "version": "0.1.2",
  "description": "Pedal Design Tokens",
  "license": "MIT",
  "type": "module",
  "main": "./build/ts/default.js",
  "module": "./build/ts/default.js",
  "types": "./build/ts/default.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm sync-tokens && tsx src/build.ts",
    "clean": "rm -rf tokens/*.json build/",
    "prettier:check": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "sync-tokens": "tsx src/sync-tokens.ts",
    "test": "vitest run",
    "release": "pnpm publish --access restricted --no-git-checks"
  },
  "devDependencies": {
    "@bikeleasing-service/typescript-config": "workspace:*",
    "@figma/rest-api-spec": "^0.28.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^1.6.0",
    "axios": "^1.8.4",
    "dotenv": "^16.5.0",
    "glob": "^11.0.1",
    "prettier": "3.5.3",
    "style-dictionary": "^4.3.3",
    "style-dictionary-utils": "^4.0.5",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vitest": "^1.6.0"
  }
}
